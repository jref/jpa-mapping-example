<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="h2-persistence-unit" transaction-type="RESOURCE_LOCAL">

        <class>ua.com.codespace.jpa.mapping.model.Company</class>
        <class>ua.com.codespace.jpa.mapping.model.Employee</class>
        <class>ua.com.codespace.jpa.mapping.model.Account</class>
        <class>ua.com.codespace.jpa.mapping.model.Boss</class>
        <class>ua.com.codespace.jpa.mapping.model.SystemAdministrator</class>
        <class>ua.com.codespace.jpa.mapping.model.Staff</class>


        <properties>

            <!-- Database connection settings -->
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:tcp://localhost/~/test" />
            <property name="javax.persistence.jdbc.user" value="sa" />
            <property name="javax.persistence.jdbc.password" value="" />

            <!-- SQL dialect -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />

            <!-- Create/update tables automatically using mapping metadata -->
            <property name="hibernate.hbm2ddl.auto" value="update" />

            <!-- show sql in console -->
            <property name="hibernate.show_sql" value="true"/>
            <!-- Pretty print the SQL in the log file and console -->
            <property name="hibernate.format_sql" value="true" />
        </properties>

    </persistence-unit>
</persistence>